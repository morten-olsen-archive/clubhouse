{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "moduleResolution": "node",
    "jsx": "preserve",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "declaration": true,
    "baseUrl": "..",
    "skipLibCheck": true,
    "rootDirs": [
      "./packages",
    ],
    "paths": {
      "clubhouse-protocol": ["./packages/protocol/src/index.ts"],
      "clubhouse-hooks": ["./packages/hooks/src/index.ts"],
      "clubhouse-test-trasporter": ["./packages/test-trasporter/src/index.ts"],
      "clubhouse-transporter-memory": ["./packages/transporter-memory/src/index.ts"],
      "clubhouse-transporter-socket": ["./packages/transporter-socket/src/index.ts"],
      "clubhouse-server": ["./packages/server/src/index.ts"],
      "clubhouse-ui": ["./packages/ui/src/index.ts"],
    }
  }
}
